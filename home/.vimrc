set encoding=utf-8          " Use UTF-8 encoding (supports Unicode)
set number                  " Show absolute line numbers
set norelativenumber        " Disable relative line numbers
set expandtab               " Convert tabs to spaces
set smarttab                " Smart tab handling for indentation
set tabstop=4               " Number of spaces a <Tab> counts for
set shiftwidth=4            " Number of spaces to use for autoindent
set hlsearch                " Highlight all search results
set ignorecase              " Case-insensitive searching
set scrolloff=2             " Keep 2 lines visible above/below cursor
set ruler                   " Show cursor position in status line
set cursorline              " Highlight the line under the cursor
set visualbell              " Flash screen instead of beep on error
set title                   " Set window title to the file name
set background=dark         " Optimize colors for dark backgrounds
set history=1000            " Increase command history size
set mouse=a                 " Enable mouse support in all modes

syntax enable               " Enable syntax highlighting
