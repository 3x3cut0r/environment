# Aliases for enhanced command-line productivity.
# The blocks are organized by the tools they extend.

# Prefer exa over ls when it is installed.
if command -v exa >/dev/null 2>&1; then
alias ls='exa --group-directories-first --classify'
alias ll='exa -al --group-directories-first'
else
# Fallback listing aliases when exa is not available.
alias ll='ls -alF'
fi

# Provide a vi alias that maps to Vim when it is available.
if command -v vim >/dev/null 2>&1; then
alias vi='vim'
fi

# Additional directory navigation helpers.
alias la='ls -A'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias ~='cd ~'

# Colorized search commands.
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# Convenience aliases for common utilities.
alias cls='clear'
alias df='df -h'
alias du='du -h -c'
alias free='free -h'

# Shortcuts for Git workflows.
alias g='git'
alias ga='git add'
alias gc='git commit'
alias gco='git checkout'
alias gs='git status'
alias gst='git status'
alias gd='git diff'
alias gl='git log --oneline --graph --decorate'

# Package management aliases for multiple distributions.
alias apti='sudo apt install'
alias aptu='sudo apt update'
alias aptuu='sudo apt update && sudo apt upgrade -y && sudo apt autoremove -y'
alias dnfi='sudo dnf install'
alias dnfu='sudo dnf update'
alias dnfuu='sudo dnf upgrade -y && sudo dnf autoremove -y'
alias ymi='sudo yum install'
alias ymu='sudo yum update'
alias ymuu='sudo yum update -y && sudo yum autoremove -y'
alias paci='sudo pacman -S'
alias pacu='sudo pacman -Syu'
alias pacuu='sudo pacman -Syu && sudo pacman -Sc'
alias zypi='sudo zypper install'
alias zypu='sudo zypper refresh'
alias zypuu='sudo zypper refresh && sudo zypper update'
alias brewi='brew install'
alias brewu='brew update'
alias brewuu='brew update && brew upgrade'
alias apki='sudo apk add'
alias apku='sudo apk update'
alias apkuu='sudo apk update && sudo apk upgrade'
